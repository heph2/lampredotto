{% extends 'layout.twig' %}

{% block contents %}
<div class="flex flex-col h-screen bg-gray-100">
    {% include 'sidebar.twig' %}

    <div class="flex-grow p-6">
        <h1 class="text-3xl font-semibold mb-4">Admin Dashboard</h1>

        <!-- Students Section -->
        <section class="mb-8">
            <h2 class="text-2xl font-semibold mb-2">Manage Students</h2>
            <a href="/admin/students/new" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mb-4 inline-block">Add New Student</a>
            <div class="bg-white shadow rounded-lg p-4">
                {% for student in students %}
                    <div class="flex justify-between items-center p-2 mb-2 border-b border-gray-200">
                        <div>
                            <p class="font-bold">{{ student.name }}</p>
                            <p class="text-sm text-gray-600">{{ student.email }}</p>
                        </div>
                        <div>
                            <a href="/admin/students/edit/{{ student.id }}" class="bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-1 px-3 rounded text-xs">Edit</a>
                            <a href="/admin/students/delete/{{ student.id }}" class="bg-red-500 hover:bg-red-600 text-white font-bold py-1 px-3 rounded text-xs" onclick="return confirm('Are you sure?');">Delete</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </section>

        <section>
            <h2 class="text-2xl font-semibold mb-2">Manage Teachers</h2>
            <a href="/admin/teachers/new" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mb-4 inline-block">Add New Teacher</a>
            <div class="bg-white shadow rounded-lg p-4">
                {% for teacher in teachers %}
                    <div class="flex justify-between items-center p-2 mb-2 border-b border-gray-200">
                        <div>
                            <p class="font-bold">{{ teacher.name }}</p>
                            <p class="text-sm text-gray-600">{{ teacher.email }}</p>
                        </div>
                        <div>
                            <a href="/admin/teachers/edit/{{ teacher.id }}" class="bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-1 px-3 rounded text-xs">Edit</a>
                            <a href="/admin/teachers/delete/{{ teacher.id }}" class="bg-red-500 hover:bg-red-600 text-white font-bold py-1 px-3 rounded text-xs" onclick="return confirm('Are you sure?');">Delete</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </section>
    </div>
</div>
{% endblock %}
